{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "Break_NCHU_Captcha",
    "description": "Just a simple extension to break NCHU Captcha",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },

    "content_scripts": [
        {
            "js": ["ilearning.js"],
            "matches": ["https://lms2020.nchu.edu.tw/*"]
        },
        {
            "js": ["NCHU_Portal.js"],
            "matches": ["https://idp.nchu.edu.tw/nidp/idff/sso*"]
        },
        {
            "js": ["NCHU_Portal.js"],
            "matches": ["https://idp.nchu.edu.tw/nidp/app/login*"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [
        "storage",
        "scripting",
        "https://lms2020.nchu.edu.tw/*",
        "https://idp.nchu.edu.tw/*"
    ]
}
